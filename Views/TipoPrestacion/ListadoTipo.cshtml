@model List<TipoPrestacion>;

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="conteiner text-center">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="card col-md-6 ">
            <h2 class="card-header">Listado de Prestaciones</h2>
            <div class="card-body">
                <table class="table  table-sm table-striped table-hover table-bordered border-success">
                    <thead class="table-dark">
                        <tr>
                            <th>Tipo de Prestaci√≥n</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Tipo_prestacion</td>
                                <td><a asp-action="EditarTipo" asp-route-id="@item.Id_tipo_prestacion" class="btn-primary w-25 mx-2"><i class="material-symbols-outlined">
                                        contract_edit
                                    </i></a>
                                    <span class="material-symbols-outlined">
                                        delete
                                    </span></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>