@model TipoPrestacion;

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center mb-4">
    <h2 class="display-4">Crear Tipo</h2>
</div>

<div class="container col-6"> 
    <div class="card">
        <div class="card-body">
            <form class="form" method="post" asp-action="NuevoTipo">
               @Html.AntiForgeryToken()
                <div class="form-floating mb-3 col-6">
                    <input asp-for="Tipo_prestacion" class="form-control" placeholder="" />
                    <label asp-for="Tipo_prestacion" class="control-label">Tipo de Prestacion</label>
                    <span asp-validation-for="Tipo_prestacion" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-3">
                    <button type="submit" class="btn btn-success w-25 mx-2">Guardar</button>
                    <a asp-action="ListadoTipo" class="btn btn-primary w-25 mx-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>