@model Prestacion;

@{
    ViewData["Title"] = "Agregar Prestacion";
    var tipos = ViewBag.TiposPrestaciones as List<TipoPrestacion>;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center mb-4">
    <h2 class="display-4">Crear Prestacion</h2>
</div>

<div class="container col-6">
    <div class="card">
        <div class="card-body">
            <form class="form" method="post" asp-action="NuevoPrestacion">
                @Html.AntiForgeryToken()
                <div class="form-floating mb-3 col-6">
                    <input asp-for="PrestacionNombre" class="form-control" placeholder="" />
                    <label asp-for="PrestacionNombre" class="control-label">Prestacion</label>
                    <span asp-validation-for="PrestacionNombre" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-6">
                    <select asp-for="Id_tipo_prestacion" class="form-control">
                        <option value="">-- Seleccione --</option>
                        @foreach (var tipo in tipos)
                        {
                            <option value="@tipo.Id_tipo_prestacion">@tipo.Tipo_prestacion</option>
                        }
                    </select>
                    <label asp-for="Id_tipo_prestacion" class="control-label">Tipo de Prestaci√≥n</label>
                    <span asp-validation-for="Id_tipo_prestacion" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-3">
                    <button type="submit" class="btn btn-success w-25 mx-2">Guardar</button>
                    <a asp-action="ListadoPrestacion" class="btn btn-primary w-25 mx-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>